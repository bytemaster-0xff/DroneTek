<UserControl
    x:Class="NiVek.FlightControls.Controls.ByteSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NiVek.FlightControls.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="220">
    
    <StackPanel>
        <TextBlock x:Name="Caption" Text="Setting"  FontSize="24" />
        <StackPanel Orientation="Horizontal">
            <Button Content="-" x:Name="Decrement" Click="Decrement_Click_1" />
            <TextBox x:Name="Value" Text="?" TextAlignment="Right" Width="120"  />
            <Button Content="+" x:Name="Increment" Click="Increment_Click_1" />
        </StackPanel>
    </StackPanel>
</UserControl>
